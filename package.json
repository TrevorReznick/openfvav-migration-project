{
  "name": "openfav-migration-unified",
  "version": "2.0.0",
  "description": "Unified migration tool combining the best features of all migration versions",
  "type": "module",
  "main": "src/cli.js",
  "bin": {
    "openfav-migrate": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "setup": "node src/cli.js setup",
    "validate": "node src/cli.js validate",
    "migrate:tokens": "node src/cli.js tokens",
    "migrate:colors": "node src/cli.js colors",
    "migrate:typography": "node src/cli.js typography",
    "migrate:spacing": "node src/cli.js spacing",
    "migrate:components": "node src/cli.js components",
    "apply-tokens": "node scripts/apply-tokens.js",
    "update-imports": "node scripts/update-imports.js",
    "analyze": "node src/cli.js analyze",
    "analyze:components": "node src/components/analyze-components.js",
    "analyze:tailwind": "node analyzers/tailwind-analyzer.js",
    "analyze:tokens": "node src/cli.js analyze:tokens",
    "api": "node api/server.js",
    "backup": "node src/utils/backup.js",
    "report": "node src/utils/reporter.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.mjs",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --config=jest.config.mjs",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --config=jest.config.mjs",
    "test:vitest": "vitest",
    "test:vitest:watch": "vitest watch",
    "test:vitest:coverage": "vitest run --coverage"
  },
  "keywords": [
    "migration",
    "openfav",
    "design-tokens",
    "components",
    "astro",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.0",
    "inquirer": "^9.0.0",
    "postcss": "^8.4.0",
    "postcss-scss": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
